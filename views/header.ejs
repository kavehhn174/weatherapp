<body style="">
<div class="mainPage">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="./images/image2.svg" alt="" width="40" height="40" class="d-inline-block align-text-top">
            </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <% if (user) { %>
                        <li class="nav-item ml-auto helloTitle">
                            <a class="nav-link active" aria-current="page" href="/">Hello <%=user.username%></a>
                        </li>
                        <li class="nav-item ml-auto">
                            <a class="nav-link active" aria-current="page" href="/logout">Log Out</a>
                        </li>
                    <%} else {%>
                        <li class="nav-item ml-auto">
                            <a class="nav-link active" aria-current="page" href="/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/signup">Register</a>
                        </li>
                    <%}%>

                </ul>
            </div>
        </div>
